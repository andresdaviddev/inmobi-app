<title>Inmobi</title>
</head>

<body>
    <!-- utilizando la side bar importada -->
    <div class="side-bar">
        <%- include('partials/sidebar')%>
    </div>
    <!-- todo el contenido(publicaiones etc) -->
    <div class="main-content">
        <!-- contenedor de las cards de las publicaiones -->
        <div class="pubs-content">

            <% for(let i=0; i < 6; i++){%>
                <div class="card-content">
                    <div class="card" style="width: 18rem;">
                        <img src="<%= img%>" class="card-img-top" alt="logo">
                        <div class="card-body">
                            <h5 class="card-title" id="title">70.000 USD</h5>
                            <p class="card-text">Some quick example Lorem ipsum dolor sit amet consectetur adipislorem20
                                of the card's content. Lorem ipsum dolor sit amet consectetur adipisicing elit. Ad,
                                eligendi.</p>
                            <a href="#" class="btn btn-primary">See</a>
                        </div>
                    </div>
                </div>
                <% }%>

        </div>
        <!-- crear nuevo post -->
        <div class="info-create-pub">
            <div class="card" style="width: 18rem;">
                <div class="card-body">
                    <h5 class="card-title">
                        <%=nombre %>
                    </h5>
                    <p class="card-text">You can create a new post and others will see it</p>
                    <a href="/newpost" class="btn btn-primary">New Post</a>
                </div>
            </div>
        </div>
    </div>

</body>

</html>